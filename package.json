{
  "name": "ravn-challenge-v2-luisangelmoroco",
  "version": "2.0.0",
  "description": "This is an online store repository built with PostgreSQL and Prisma as the database layer, Express, Typescript and REST. This repository represents a challenge for a Node.js developer trainee position.",
  "main": "index.js",
  "scripts": {
    "lint": "eslint src/**/*.ts",
    "format": "eslint src/**/*.ts --fix",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "start": "npm run build && node build/index.js",
    "build": "tsc",
    "dev": "nodemon src/index.ts",
    "deploy": "npx prisma init && npx prisma migrate dev --name production",
    "test": "jest",
    "prisma": "npx prisma migrate dev --devtest",
    "change": "npx conventional-changelog -i CHANGELOG.md -s -r 0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luismoroco/luismoroco-Ravn-Challenge-V2-LuisAngelMoroco.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/luismoroco/luismoroco-Ravn-Challenge-V2-LuisAngelMoroco/issues"
  },
  "homepage": "https://github.com/luismoroco/luismoroco-Ravn-Challenge-V2-LuisAngelMoroco#readme",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.4.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.14.6",
    "@types/node-schedule": "^2.1.0",
    "@types/nodemailer": "^6.4.7",
    "@types/supertest": "^2.0.12",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "conventional-changelog-cli": "^2.2.2",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "nodemon": "^2.0.21",
    "prettier": "^2.8.4",
    "prisma": "^4.11.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@prisma/client": "^4.11.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "http-status": "^1.6.2",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-schedule": "^2.1.1",
    "nodemailer": "^6.9.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.2",
    "uuid": "^9.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules",
      "/build",
      "/prisma",
      "/.vscode"
    ]
  }
}
